<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="24dp">
<!--    android:background="@drawable/bgr_start_menu"-->

    <TextView
        android:text="Chọn Background"
        android:textSize="20sp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bg1Img"
            android:src="@drawable/background"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginEnd="12dp"/>
        <ImageView
            android:id="@+id/bg2Img"
            android:src="@drawable/background2"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
    </LinearLayout>

    <TextView
        android:text="Chọn Máy bay"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/plane1Img"
            android:src="@drawable/player"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="12dp"/>
        <ImageView
            android:id="@+id/plane2Img"
            android:src="@drawable/player2"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </LinearLayout>
    <!-- 👇 CHÈN KHỐI NÀY TRƯỚC NÚT startBtn -->
    <LinearLayout
        android:id="@+id/playerInfoPanel"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMode"
            android:text="Chế độ: ..."
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPlayerName"
            android:text="Tên: ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCoins"
            android:text="Xu: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Nhập tên & lưu -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etName"
                android:hint="Nhập tên mới"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSaveName"
                android:text="Lưu tên"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Nút đăng nhập/đăng ký (dùng khi ONLINE) -->
        <Button
            android:id="@+id/loginBtn"
            android:text="Đăng nhập / Đăng ký (ONLINE)"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/startBtn"
        android:text="Bắt đầu"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>