<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ảnh nền -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/demo" />

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="28dp"
            android:layout_margin="20dp"
            android:elevation="8dp"
            android:clipToPadding="false">

            <!-- Thông tin tên / xu -->
            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Tên: Player"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:shadowColor="#FF5722"
                android:shadowDx="0.5"
                android:shadowDy="0.5"
                android:shadowRadius="1"/>

            <TextView
                android:id="@+id/tvCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="Xu: 0"
                android:textColor="#FFEB3B"
                android:textSize="18sp"
                android:textStyle="bold"
                android:shadowColor="#FF9800"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>

            <!-- Nhập tên -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@android:color/white"
                android:hint="Nhập tên người chơi"
                android:textColor="#222"
                android:textSize="16sp"
                android:padding="10dp"
                android:elevation="2dp"
                android:drawableLeft="@android:drawable/ic_menu_edit"/>

            <Button
                android:id="@+id/btnSaveName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#4CAF50"
                android:text="Lưu tên"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:elevation="2dp"/>

            <Button
                android:id="@+id/btnChangeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FF9800"
                android:text="Đổi tên"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:elevation="2dp"
                android:visibility="gone"/>

            <!-- Chọn Background - ẨN -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Chọn Background"
                android:textColor="#FFEB3B"
                android:textSize="20sp"
                android:textStyle="bold"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="18dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/bg1Img"
                    android:layout_width="60dp"
                    android:layout_height="84dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/background"
                    android:scaleType="fitCenter"
                    android:padding="3dp"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:id="@+id/bg2Img"
                    android:layout_width="53dp"
                    android:layout_height="84dp"
                    android:src="@drawable/background2"
                    android:scaleType="fitCenter"
                    android:padding="3dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <!-- Chọn Máy bay -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Chọn Máy bay"
                android:textColor="#FFEB3B"
                android:textSize="20sp"
                android:textStyle="bold"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <!-- PHẦN CHỌN MÁY BAY SWIPE + BỆ ĐỠ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">

                <!-- Máy bay swipe (ViewPager2) -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/planeViewPager"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:layout_marginBottom="0dp"
                    android:paddingBottom="-100dp"
                    android:layout_gravity="center"/>

                <!-- Bệ đỡ to hơn và sát máy bay hơn -->
                <ImageView
                    android:id="@+id/planeBase"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:src="@drawable/plane_base"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="-100dp"/>
            </LinearLayout>

            <!-- Nút bắt đầu -->
            <Button
                android:id="@+id/startBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:backgroundTint="#FF5722"
                android:text="Bắt đầu"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:elevation="4dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- NÚT GIỎ HÀNG -->
    <ImageButton
        android:id="@+id/btnCart"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/cart"
        android:scaleType="centerInside"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_gravity="end|top"
        android:layout_margin="18dp"
        android:elevation="10dp" />
    <!-- NÚT BẢNG XẾP HẠNG -->
    <ImageButton
        android:id="@+id/btnLeaderboard"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="start|top"
        android:layout_margin="18dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:elevation="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/leaderboard" />
</FrameLayout>