<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ảnh nền -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/menu_bg_v3" />

    <!-- Overlay gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_gradient" />

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Thông tin chế độ / tên / xu -->
            <TextView
                android:id="@+id/tvMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Chế độ: OFFLINE"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Tên: Player"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Xu: 0"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Nhập tên -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                android:hint="Nhập tên người chơi"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnSaveName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#4CAF50"
                android:text="Lưu tên"
                android:textColor="@android:color/white" />

            <!-- Nút Login -->
            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#2196F3"
                android:text="Đăng nhập Online"
                android:textColor="@android:color/white" />

            <!-- Chọn Background -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Chọn Background"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bg1Img"
                    android:layout_width="56dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/background" />

                <ImageView
                    android:id="@+id/bg2Img"
                    android:layout_width="49dp"
                    android:layout_height="80dp"
                    android:src="@drawable/background2" />
            </LinearLayout>

            <!-- Chọn Máy bay -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Chọn Máy bay"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Máy bay đang chọn, mặc định ẨN -->
            <ImageView
                android:id="@+id/planePreviewImg"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:src="@drawable/player"
                android:visibility="gone" />

            <!-- 2 máy bay nhỏ để chọn -->
            <LinearLayout
                android:id="@+id/planeSelectLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/plane1Img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/player" />

                <ImageView
                    android:id="@+id/plane2Img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/player2_v2" />
            </LinearLayout>

            <!-- Nút bắt đầu -->
            <Button
                android:id="@+id/startBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#FF5722"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="Bắt đầu"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <!-- NÚT GIỎ HÀNG ĐƯA XUỐNG DƯỚI CÙNG ĐỂ ĐƯỢC ƯU TIÊN CLICK -->
    <ImageButton
        android:id="@+id/btnCart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/cart"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:layout_gravity="end|top"
        android:layout_margin="16dp" />

</FrameLayout>