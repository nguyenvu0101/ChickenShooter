<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ảnh nền -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/menu_bg_v3" />


    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="28dp"
            android:layout_margin="20dp"
            android:elevation="8dp"
            android:clipToPadding="false">

            <!-- Thông tin chế độ / tên / xu -->
            <TextView
                android:id="@+id/tvMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Chế độ: OFFLINE"
                android:textColor="#FFD700"
                android:textSize="20sp"
                android:textStyle="bold"
                android:shadowColor="#FF5722"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Tên: Player"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:shadowColor="#FF5722"
                android:shadowDx="0.5"
                android:shadowDy="0.5"
                android:shadowRadius="1"/>

            <TextView
                android:id="@+id/tvCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="Xu: 0"
                android:textColor="#FFEB3B"
                android:textSize="18sp"
                android:textStyle="bold"
                android:shadowColor="#FF9800"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>

            <!-- Nhập tên -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@android:color/white"
                android:hint="Nhập tên người chơi"
                android:textColor="#222"
                android:textSize="16sp"
                android:padding="10dp"
                android:elevation="2dp"
                android:drawableLeft="@android:drawable/ic_menu_edit"/>

            <Button
                android:id="@+id/btnSaveName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#4CAF50"
                android:text="Lưu tên"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:elevation="2dp"/>

            <!-- Nút Login -->
            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:backgroundTint="#2196F3"
                android:text="Đăng nhập Online"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:elevation="2dp"/>

            <!-- Chọn Background -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Chọn Background"
                android:textColor="#FFEB3B"
                android:textSize="20sp"
                android:textStyle="bold"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="18dp">

                <ImageView
                    android:id="@+id/bg1Img"
                    android:layout_width="60dp"
                    android:layout_height="84dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/background"
                    android:scaleType="fitCenter"
                    android:background="@android:color/holo_blue_light"
                    android:padding="3dp"/>
                <!-- Viền xanh sẽ hiện rõ -->

                <ImageView
                    android:id="@+id/bg2Img"
                    android:layout_width="53dp"
                    android:layout_height="84dp"
                    android:src="@drawable/background2"
                    android:scaleType="fitCenter"
                    android:background="@android:color/holo_blue_light"
                    android:padding="3dp"/>
                <!-- Viền xanh sẽ hiện rõ -->
            </LinearLayout>

            <!-- Chọn Máy bay -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Chọn Máy bay"
                android:textColor="#FFEB3B"
                android:textSize="20sp"
                android:textStyle="bold"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <!-- Máy bay đang chọn, mặc định ẨN -->
            <ImageView
                android:id="@+id/planePreviewImg"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@drawable/player"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <!-- 2 máy bay nhỏ để chọn -->
            <LinearLayout
                android:id="@+id/planeSelectLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/plane1Img"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/player"
                    android:scaleType="centerInside"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="4dp"/>

                <ImageView
                    android:id="@+id/plane2Img"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/player2_v2"
                    android:scaleType="centerInside"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="4dp"/>
            </LinearLayout>

            <!-- Nút bắt đầu -->
            <Button
                android:id="@+id/startBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:backgroundTint="#FF5722"
                android:text="Bắt đầu"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:elevation="4dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- NÚT GIỎ HÀNG ĐƯA XUỐNG DƯỚI CÙNG ĐỂ ĐƯỢC ƯU TIÊN CLICK -->
    <ImageButton
        android:id="@+id/btnCart"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/cart"
        android:scaleType="centerInside"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_gravity="end|top"
        android:layout_margin="18dp"
        android:elevation="10dp" />

</FrameLayout>