<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ảnh nền -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/menu_bg_v3"
        android:scaleType="centerCrop" />

    <!-- Overlay gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_gradient" />

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Thông tin chế độ / tên / xu -->
            <TextView
                android:id="@+id/tvMode"
                android:text="Chế độ: OFFLINE"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPlayerName"
                android:text="Tên: Player"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvCoins"
                android:text="Xu: 0"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Nhập tên -->
            <EditText
                android:id="@+id/etName"
                android:hint="Nhập tên người chơi"
                android:background="@android:color/white"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSaveName"
                android:text="Lưu tên"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Nút Login -->
            <Button
                android:id="@+id/loginBtn"
                android:text="Đăng nhập Online"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Chọn Background -->
            <TextView
                android:text="Chọn Background"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/bg1Img"
                    android:src="@drawable/background"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/white"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/bg2Img"
                    android:src="@drawable/background2"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:background="@android:color/white"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- Chọn Máy bay -->
            <TextView
                android:text="Chọn Máy bay"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/plane1Img"
                    android:src="@drawable/player"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:id="@+id/plane2Img"
                    android:src="@drawable/player2_v2"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />
            </LinearLayout>

            <!-- Nút bắt đầu -->
            <Button
                android:id="@+id/startBtn"
                android:text="Bắt đầu"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#FF5722"
                android:textColor="@android:color/white"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:layout_marginBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
