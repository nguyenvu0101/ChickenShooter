<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:gravity="center"
    android:padding="24dp" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg_v2">

    <Button
        android:id="@+id/btnOnline"
        android:text="Chơi ONLINE (đăng nhập / đăng ký)"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent" android:layout_height="12dp"/>

    <Button
        android:id="@+id/btnOffline"
        android:text="Chơi OFFLINE"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
